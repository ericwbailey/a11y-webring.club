      type="button">
      <svg aria-hidden="true" focusable="false" class="[ c-icon ]"><use xlink:href="#system"></use></svg>
      <span class="[ u-hide-visually ]">System</span>
    </button>
    <button
      id="scheme-button-light"
      class="[ u-button u-scale-on-hover u-icon-press ] [ c-toggle-button ]"
      type="button">
      <svg aria-hidden="true" focusable="false" class="[ c-icon ]"><use xlink:href="#light"></use></svg>
      <span class="[ u-hide-visually ]">Light</span>
    </button>
    <button
      id="scheme-button-dark"
      class="[ u-button u-scale-on-hover u-icon-press ] [ c-toggle-button ]"
      type="button">
      <svg aria-hidden="true" focusable="false" class="[ c-icon ]"><use xlink:href="#dark"></use></svg>
      <span class="[ u-hide-visually ]">Dark</span>
    </button>
  </div>
